MAPPING_2_MEASUREMENT_POSITIVE=SENEC
MAPPING_2_MEASUREMENT_NEGATIVE=SENEC
MAPPING_2_FIELD_POSITIVE=grid_power_minus
MAPPING_2_FIELD_NEGATIVE=grid_power_plus
MAPPING_2_TYPE=integer
MAPPING_3_TOPIC=foo/0/grid_export_limit
MAPPING_3_MEASUREMENT=SENEC
MAPPING_3_FIELD=power_ratio
MAPPING_3_TYPE=float
MAPPING_4_TOPIC=foo/0/battery
MAPPING_4_MEASUREMENT_POSITIVE=SENEC
MAPPING_4_MEASUREMENT_NEGATIVE=SENEC
MAPPING_4_FIELD_POSITIVE=bat_power_minus
MAPPING_4_FIELD_NEGATIVE=bat_power_plus
MAPPING_4_TYPE=integer
MAPPING_5_TOPIC=foo/0/soc
MAPPING_5_MEASUREMENT=SENEC
MAPPING_5_FIELD=bat_fuel_charge
MAPPING_5_TYPE=float
MAPPING_6_TOPIC=foo/0/wallbox
MAPPING_6_MEASUREMENT=pv
MAPPING_6_FIELD=wallbox_power
MAPPING_6_TYPE=integer
MAPPING_7_TOPIC=foo/0/case_temp
