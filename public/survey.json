{
  "locale": "de",
  "title": {
    "de": "SOLECTRUS-Konfigurator",
    "default": "SOLECTRUS configurator"
  },
  "description": {
    "de": "Erstelle Schritt-für-Schritt deine Installation von SOLECTRUS",
    "default": "Create your SOLECTRUS installation step-by-step"
  },
  "logoPosition": "right",
  "pages": [
    {
      "name": "page1",
      "elements": [
        {
          "type": "checkbox",
          "name": "q_devices",
          "title": {
            "de": "Welche Geräte hast du in deinem Haus?",
            "default": "What appliances do you have in your home?"
          },
          "defaultValue": ["battery"],
          "isRequired": true,
          "validators": [
            {
              "type": "expression",
              "text": {
                "default": "You can't do it without a battery!",
                "de": "Ohne Stromspeicher geht's nicht!"
              },
              "expression": "{q_devices} contains 'battery'"
            }
          ],
          "choices": [
            {
              "value": "battery",
              "text": {
                "de": "Stromspeicher",
                "default": "Battery"
              }
            },
            {
              "value": "wallbox",
              "text": "Wallbox"
            },
            {
              "value": "heatpump",
              "text": {
                "de": "Wärmepumpe",
                "default": "Heat pump"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "page2",
      "elements": [
        {
          "type": "radiogroup",
          "name": "installation_type",
          "title": {
            "de": "Wie möchtest Du SOLECTRUS betreiben?",
            "default": "How would you like to operate SOLECTRUS?"
          },
          "isRequired": true,
          "choices": [
            {
              "value": "standalone",
              "text": {
                "de": "Alles auf einem lokalen Server (Raspberry Pi, NAS, sonstiger Linux-Server)",
                "default": "Everything on a local server (Raspberry Pi, NAS, other Linux server)"
              }
            },
            {
              "value": "distributed",
              "text": {
                "de": "Verteilte Installation (Messwerte abfragen lokal, Datenbank und Dashboard auf einem Cloud-Server)",
                "default": "Distributed installation (query measured values locally, database and dashboard on a cloud server)"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "page3",
      "elements": [
        {
          "type": "radiogroup",
          "name": "battery_vendor",
          "visibleIf": "{q_devices} contains 'battery'",
          "title": {
            "de": "Von welchem Hersteller ist dein Stromspeicher?",
            "default": "Which manufacturer is your storage system from?"
          },
          "isRequired": true,
          "choices": [
            {
              "value": "battery_senec3",
              "text": {
                "default": "SENEC.Home V2.1 or V3",
                "de": "SENEC.Home V2.1 oder V3"
              }
            },
            {
              "value": "battery_senec4",
              "text": "SENEC.Home 4"
            },
            {
              "value": "battery_other",
              "text": {
                "de": "Anderer",
                "default": "Other"
              }
            }
          ],
          "separateSpecialChoices": true,
          "otherText": {
            "de": "Sonstiges"
          }
        }
      ]
    },
    {
      "name": "page4",
      "elements": [
        {
          "type": "radiogroup",
          "name": "heatpump_access",
          "visibleIf": "{q_devices} contains 'heatpump'",
          "title": {
            "de": "Wie wird der Stromverbrauch der Wärmepumpe gemessen?",
            "default": "How is the electricity consumption of the heat pump measured?"
          },
          "isRequired": true,
          "choices": [
            {
              "value": "heatpump_shelly",
              "text": {
                "de": "Über einen Shelly",
                "default": "Using Shelly"
              }
            },
            {
              "value": "heatpump_mqtt",
              "text": {
                "de": "Über MQTT",
                "default": "Via MQTT"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "page5",
      "elements": [
        {
          "type": "radiogroup",
          "name": "wallbox_vendor",
          "visibleIf": "{q_devices} contains 'wallbox'",
          "title": {
            "de": "Von welchem Hersteller ist deine Wallbox?",
            "default": "Which manufacturer is your wallbox from?"
          },
          "choices": [
            {
              "value": "wallbox_senec",
              "text": {
                "de": "SENEC (gesteuert vom Stromspeicher)",
                "default": "SENEC (controlled by the battery)"
              }
            },
            {
              "value": "wallbox_other",
              "text": {
                "default": "Other",
                "de": "Anderer"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "page6",
      "elements": [
        {
          "type": "boolean",
          "name": "q_updates",
          "title": {
            "de": "Möchtest du automatische Updates aktivieren?",
            "default": "Would you like to activate automatic updates?"
          },
          "defaultValue": "true"
        }
      ]
    },
    {
      "name": "page7",
      "elements": [
        {
          "type": "boolean",
          "name": "q_forecast",
          "title": {
            "de": "Möchtest du eine Ertragsvorhersage per forecast.solar?",
            "default": "Would you like a yield forecast via forecast.solar?"
          },
          "defaultValue": "true"
        }
      ]
    },
    {
      "name": "page8",
      "elements": [
        {
          "type": "text",
          "name": "forecast_latitude",
          "title": "Latitude",
          "description": {
            "de": "-90 (Süd) bis 90 (Nord)",
            "default": "-90 (South) to 90 (North)"
          },
          "inputType": "number"
        },
        {
          "type": "text",
          "name": "forecast_longitude",
          "title": "Longitude",
          "description": {
            "de": "-180 (West) bis 180 (Ost)",
            "default": "-180 (West) to 180 (East)"
          },
          "inputType": "number"
        },
        {
          "type": "text",
          "name": "forecast_declination",
          "title": {
            "de": "Dachneigung",
            "default": "Roof declination"
          },
          "description": {
            "de": "0 (horizontal) bis 90 (Vertikal)",
            "default": "0 (horizontal) to 90 (vertical)"
          },
          "inputType": "number"
        },
        {
          "type": "text",
          "name": "forecast_azimuth",
          "title": "Azimuth",
          "description": {
            "de": "-180 … 180 (-180 = Nord, -90 = Ost, 0 = Süd, 90 = West, 180 = Nord)",
            "default": "-180 ... 180 (-180 = north, -90 = east, 0 = south, 90 = west, 180 = north)"
          },
          "inputType": "number"
        },
        {
          "type": "text",
          "name": "forecast_kwp",
          "title": {
            "de": "Maximal-Leistung",
            "default": "Maximum power"
          },
          "description": "in kWp",
          "inputType": "number"
        },
        {
          "type": "text",
          "name": "forecast_interval",
          "title": {
            "de": "Abfrage-Intervall",
            "default": "Query interval"
          },
          "description": {
            "de": "in Sekunden",
            "default": "in seconds"
          },
          "inputType": "number"
        }
      ],
      "visibleIf": "{q_forecast} = true",
      "title": "Location of the PV system",
      "description": {
        "de": "Erforderlich für die Ertragsvorhersage",
        "default": "Required for the yield forecast"
      }
    }
  ]
}
